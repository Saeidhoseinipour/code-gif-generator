{
  "name": "code-gif-generator",
  "version": "1.0.0",
  "description": "Generate scrolling GIFs from code snippets",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "postinstall": "cp -r src/utils/gifsicle.exe node_modules/giflossy/vendor",
    "test": "jest --config config/jest.config.js",
    "create-doc-gifs": "ts-node scripts/createGifsForDocs.ts",
    "typedoc": "typedoc --tsconfig config/tsconfig.json --out typedoc --mode file",
    "build": "tsc -p config/tsconfig.json && npm run copy-template && npm run create-doc-gifs",
    "copy-template": "cp src/utils/editor_template.html lib/utils",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "tslint -c config/tslint.json -p config/tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "pre-push": "git-branch-is -r \"^((?!master).)*$\" || (git-branch-is master && npm test)"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laudep/code-gif-generator.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "gif",
    "CodeMirror",
    "animation"
  ],
  "author": "Laurens Deprost",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/laudep/code-gif-generator/issues"
  },
  "homepage": "https://github.com/laudep/code-gif-generator#readme",
  "dependencies": {
    "gif-encoder": "^0.7.2",
    "imagemin": "^7.0.0",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-gifsicle": "^6.0.1",
    "nodemon": "^2.0.4",
    "pngjs": "^3.4.0",
    "puppeteer": "^5.2.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/imagemin": "^7.0.0",
    "@types/jest": "^26.0.13",
    "@types/pngjs": "^3.4.2",
    "@types/puppeteer": "^3.0.1",
    "@types/winston": "^2.4.4",
    "del": "^5.1.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.1",
    "typedoc-plugin-markdown": "^2.4.2",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true
  }
}
